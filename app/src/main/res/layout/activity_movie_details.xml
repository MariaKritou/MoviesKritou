<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2839"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/details_img"

        android:layout_width="match_parent"
        android:layout_height="500dp"

        android:background="@drawable/juju"
        android:contentDescription="@string/img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

    <TextView
        android:id="@+id/movie_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/jujutsu_kaisen"
        android:textSize="28sp"
        android:textColor="@color/white" />

        <ImageView
            android:id="@+id/fav_details"

            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_marginLeft="350dp"
            android:layout_marginStart="350dp"

            android:background="@drawable/ic_baseline_favorite_24"
            app:backgroundTint="#BA1141"
            android:contentDescription="@string/fav" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/star"

        android:layout_width="25dp"
        android:layout_height="25dp"

        app:backgroundTint="#64CBF3"
        android:background="@drawable/ic_baseline_star_24"
        android:contentDescription="@string/star" />

    <ImageView
        android:id="@+id/star_half"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/star"
        android:layout_toEndOf="@+id/star"

        app:backgroundTint="#64CBF3"
        android:background="@drawable/ic_baseline_star_half_24"
        android:contentDescription="@string/star" />

    <ImageView
        android:id="@+id/star_border"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/star_half"
        android:layout_toEndOf="@+id/star_half"

        app:backgroundTint="#64CBF3"
        android:background="@drawable/ic_baseline_star_border_24"
        android:contentDescription="@string/star" />

        <TextView
            android:id="@+id/release_date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/star_border"
            android:layout_toEndOf="@+id/star_border"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"

            android:text="@string/juju_release_date"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#838688"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_lorem"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"

        android:text="@string/lorem"
        android:textSize="20sp"
        android:textColor="#ECE7E7" />

</LinearLayout>